@model ControleClinicaPsicologia.Models.Psicologo

@{
    ViewData["Title"] = "Adicionar Psicólogo";
}

<h1>Adicionar um novo Psicólogo </h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PsicologoNome" class="control-label">Nome Completo</label>
                <input asp-for="PsicologoNome" class="form-control" />
                <span asp-validation-for="PsicologoNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Especialidade" class="control-label">Especialidade</label>
                <input asp-for="Especialidade" class="form-control" />
                <span asp-validation-for="Especialidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroRegistro" class="control-label">Numero do Registro</label>
                <input asp-for="NumeroRegistro" class="form-control" />
                <span asp-validation-for="NumeroRegistro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label">Telefone</label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a class="btn btn-primary" role="button" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
