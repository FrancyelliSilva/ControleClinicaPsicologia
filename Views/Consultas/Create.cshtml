@model ControleClinicaPsicologia.Models.Consulta

@{
    ViewData["Title"] = "Agendar Consulta";
}

<h1>Agendar consulta</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="PacienteNome">Nome do Paciente</label>
                <input asp-for="PacienteNome" class="form-control" />
                <span asp-validation-for="PacienteNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PsicologoNome">Nome do Psicologo</label>
                <input asp-for="PsicologoNome" class="form-control" />
                <span asp-validation-for="PsicologoNome" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Telefone">Telefone do Paciente</label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataConsulta" class="control-label">Data e Hora da Consulta</label>
                <input asp-for="DataConsulta" class="form-control" />
                <span asp-validation-for="DataConsulta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Observacoes">Observações (se necessário)</label>
                <textarea asp-for="Observacoes" class="form-control"></textarea>
            </div>
            <hr/>

           <button type="submit" class="btn btn-primary">Salvar</button>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
