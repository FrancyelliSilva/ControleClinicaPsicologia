@model ControleClinicaPsicologia.Models.Paciente

@{
    ViewData["Title"] = "Deletar";
}
<h3>Você tem certeza que deseja deletar o cadastro deste paciente?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome completo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PacienteName)
        </dd>
        <dt class = "col-sm-2">
            E-mail
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PacienteEmail)
        </dd>
        <dt class = "col-sm-2">
            Data de nascimento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>
        <dt class = "col-sm-2">
            Telefone
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PacienteId" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index" class=" btn btn-primary">Voltar</a>
    </form>
</div>
